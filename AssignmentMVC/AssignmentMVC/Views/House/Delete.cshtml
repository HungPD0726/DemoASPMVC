@model AssignmentMVC.ViewModels.House.HouseDetailViewModel

@{
    ViewData["Title"] = "Xác nhận xóa";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa nhà</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa nhà này? Hành động này không thể hoàn tác!
                    </div>

                    <h5>Thông tin nhà:</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th width="30%">ID:</th>
                                <td>@Model.HouseID</td>
                            </tr>
                            <tr>
                                <th>Tên nhà:</th>
                                <td><strong>@Model.HouseName</strong></td>
                            </tr>
                            <tr>
                                <th>Thông tin:</th>
                                <td>@Model.Information</td>
                            </tr>
                            <tr>
                                <th>Giá điện:</th>
                                <td>@Model.PowerPrice.ToString("N0") VNĐ/kWh</td>
                            </tr>
                            <tr>
                                <th>Giá nước:</th>
                                <td>@Model.WaterPrice.ToString("N0") VNĐ/m³</td>
                            </tr>
                            @if (Model.Rooms != null && Model.Rooms.Any())
                            {
                                <tr>
                                    <th>Số phòng:</th>
                                    <td>@Model.Rooms.Count phòng</td>
                                </tr>
                            }
                        </table>
                    </div>

                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.HouseID" method="post" class="mt-4">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Xác nhận xóa
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Hủy và quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
