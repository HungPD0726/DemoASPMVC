@model List<AssignmentMVC.ViewModels.Room.RoomViewModel>

@{
    ViewData["Title"] = "Danh sách phòng";
    var houseId = ViewBag.HouseId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Danh sách phòng</h2>
        <div>
            <a asp-controller="House" asp-action="Details" asp-route-id="@houseId" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại nhà
            </a>
            @if (Context.Request.Cookies.ContainsKey("AuthToken"))
            {
                    <a asp-action="Create" asp-route-houseId="@houseId" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Thêm phòng mới
                    </a>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }

    @if (Model != null && Model.Any())
    {
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="table-primary">
                        <tr>
                            <th>Tên phòng</th>
                            <th>Giá thuê</th>
                            <th>Diện tích</th>
                            <th>Sức chứa</th>
                            <th>Đang ở</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var room in Model)
                    {
                                <tr class="@(room.IsAvailable ? "" : "table-secondary")">
                                    <td><strong>@room.RoomName</strong></td>
                                    <td>@room.Price.ToString("N0") VNĐ</td>
                                    <td>@room.Area m²</td>
                                    <td>@room.MaxAmountOfPeople người</td>
                                    <td>@room.CurrentAmountOfPeople người</td>
                                    <td>
                                @if (room.IsAvailable)
                                {
                                                <span class="badge bg-success">Còn trống</span>
                                }
                                else
                                {
                                                <span class="badge bg-danger">Đã đầy</span>
                                }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@room.RoomID" class="btn btn-sm btn-info" title="Chi tiết">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                    @if (Context.Request.Cookies.ContainsKey("AuthToken"))
                                    {
                                                    <a asp-action="Edit" asp-route-id="@room.RoomID" class="btn btn-sm btn-warning" title="Sửa">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@room.RoomID" class="btn btn-sm btn-danger" title="Xóa">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                    }
                                        </div>
                                    </td>
                                </tr>
                    }
                    </tbody>
                </table>
            </div>
    }
    else
    {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> Nhà này chưa có phòng nào!
            </div>
    }
</div>
